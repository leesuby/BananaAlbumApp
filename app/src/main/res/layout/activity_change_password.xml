<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="64"
    android:background="@color/light_grey"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10
"
        android:background="@drawable/bg_gradient_lightyello_lightpink">

        <ImageButton
            android:id="@+id/btn_backChangePassword"
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/ic_baseline_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.657" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/crimson"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.589" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/NewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/custom_edittext_email"
        android:drawableStart="@drawable/round_key_24"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPassword"

        android:paddingLeft="15dp"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="14dp"
         />

    <EditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"

        android:layout_marginVertical="5dp"
        android:background="@drawable/custom_edittext_email"
        android:drawableStart="@drawable/round_key_24"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Confirm new password"
        android:inputType="textPassword"
        android:backgroundTint="@color/white"
        android:paddingLeft="15dp"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="14dp"
        />

    <Button
        android:id="@+id/change_pw_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change password"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="@color/light_pink"
        android:background="@drawable/custom_button_login"/>

    <Button
        android:id="@+id/cancel_btn_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/dark_grey"
        android:background="@drawable/custom_button_login"
        android:backgroundTint="@color/grey"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/forgotpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="Forgot password?"
        android:textColor="@color/crimson"/>


</LinearLayout>